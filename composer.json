{
    "name": "statamic/statamic",
    "description": "Statamic",
    "keywords": [
        "statamic",
        "cms",
        "flat file",
        "laravel"
    ],
    "type": "project",
    "require": {
        "php": "^7.1.3",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "^6.0",
        "laravel/tinker": "^1.0",
        "rias/statamic-color-swatches": "dev-master",
        "rias/statamic-link-it": "dev-master",
        "rias/statamic-markdown-highlight": "dev-master",
        "rias/statamic-position-fieldtype": "dev-master",
        "spatie/laravel-sitemap": "^5.5",
        "spatie/statamic-responsive-images": "dev-master",
        "statamic/cms": "^3.0@beta",
        "statamic/ssg": "dev-master"
    },
    "require-dev": {
        "facade/ignition": "^1.3",
        "filp/whoops": "^2.0",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^3.0",
        "phpunit/phpunit": "^7.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan statamic:install --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ]
    },
    "repositories": [
        {
            "type": "path",
            "url": "../statamic-color-swatches"
        },
        {
            "type": "path",
            "url": "../statamic-position-fieldtype"
        },
        {
            "type": "path",
            "url": "../statamic-markdown-highlight"
        },
        {
            "type": "path",
            "url": "../statamic-link-it"
        },
        {
            "type": "path",
            "url": "../statamic-responsive-images"
        }
    ]
}
